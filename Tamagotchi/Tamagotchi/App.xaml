<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamagotchi.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="EmergencyStyle">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BackgroundColor" Value="Red"/>
            </Style>
            <Style x:Key="DangerStyle" TargetType="Button">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BackgroundColor" Value="Orange"/>
            </Style>
            <Style x:Key="NotGreatStyle" TargetType="Button">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BackgroundColor" Value="LightGreen"/>
            </Style>
            <Style x:Key="HealthyStyle" TargetType="Button">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BackgroundColor" Value="LimeGreen"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>